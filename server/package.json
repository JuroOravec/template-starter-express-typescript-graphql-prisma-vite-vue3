{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc && tscpaths -p tsconfig.json --src ./src --out ./dist",
    "dev": "npm run dev:local",
    "dev:local": "npm run env:local -- -- nodemon --watch 'src/**/*.ts' --ignore 'src/**/__test__/*.ts' --exec ts-node src/index.ts",
    "dev:dev": "npm run env:dev -- -- nodemon --watch 'src/**/*.ts' --ignore 'src/**/__test__/*.ts' --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "start:debug": "npm run env:dev -- -- node --inspect-brk dist/index.js",
    "test": "npm run test:unit",
    "test:unit": "npm run env:dev -- -- jest --runInBand --forceExit --detectOpenHandles",
    "lint": "npm run lint:eslint && npm run lint:prisma",
    "lint:eslint": "eslint src/** --ext .{ts,js} --no-error-on-unmatched-pattern",
    "lint:prisma": "npm run prisma:local -- validate",
    "codegen": "run-p graphql:gen prisma:gen",
    "graphql:gen": "dotenv -v GRAPHQL_LIVE=1 -- graphql-codegen --config codegen.ts --verbose --debug",
    "graphql:gen:offline": "graphql-codegen --config codegen.ts --verbose --debug",
    "prisma": "npx prisma",
    "prisma:local": "npm run env:local -- -- npx prisma",
    "prisma:dev": "npm run env:dev -- -- npx prisma",
    "prisma:prd": "npm run env:prd -- -- npx prisma",
    "prisma:format": "find . -name \\*.prisma -type f -exec npm run prisma format -- --schema={} \\;",
    "prisma:gen": "npm run prisma:merge -- && npm run prisma:local -- generate",
    "prisma:merge": "prisma-merge --baseFile=src/datasources/prisma/base.prisma -s=src/datasources/**/*.prisma -o=prisma/schema.prisma",
    "docker:install": "docker-compose pull && docker-compose create",
    "docker:build": "docker-compose build",
    "docker:start": "npm run docker:start:dev",
    "docker:start:local": "npm run env:local -- -- docker-compose -f docker-compose.local.yaml up",
    "docker:start:dev": "npm run env:dev -- -- docker-compose up",
    "docker:start:prd": "npm run env:prd -- -- docker-compose up",
    "docker:stop": "docker-compose down",
    "env:local": "dotenv -e .env.local",
    "env:dev": "dotenv -e .env.dev",
    "env:prd": "dotenv -e .env.prd",
    "playground": "npm run env:dev -- -- ts-node ./playground.ts"
  },
  "author": "Juro Oravec <juraj.oravec.josefson@gmail.com>",
  "license": "MIT",
  "_moduleAliases": {
    "@": "src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^4.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/time": "^5.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@swc/core": "^1.3.64",
    "@swc/helpers": "^0.5.1",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.35",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/mailparser": "^3.4.0",
    "@types/node": "^20.1.3",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@types/redis-mock": "^0.17.1",
    "@types/smtp-server": "^3.5.7",
    "@types/statuses": "^2.0.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prisma-merge": "^0.2.0",
    "redis-mock": "^0.56.3",
    "regenerator-runtime": "^0.13.11",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tscpaths": "0.0.9",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@godaddy/terminus": "^4.12.0",
    "@paralleldrive/cuid2": "^2.2.0",
    "@prisma/client": "^4.14.1",
    "@sentry/node": "^7.52.1",
    "@vue/reactivity": "^3.3.4",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.22.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "is-disposable": "^0.4.0",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "mailparser": "^3.6.4",
    "module-alias": "^2.2.2",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "php-serialize": "^4.1.1",
    "pino": "^8.14.1",
    "prisma": "^4.14.1",
    "redis": "^4.6.6",
    "smtp-server": "^3.11.0"
  }
}
