{
  "name": "graphql-typescript-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc && tscpaths -p tsconfig.json --src ./src --out ./dist",
    "watch": "npm run watch:local",
    "watch:local": "dotenv -e .env.local -- nodemon --watch 'src/**/*.ts' --ignore 'src/**/__test__/*.ts' --exec 'ts-node' src/index.ts",
    "watch:dev": "dotenv -e .env.dev -- nodemon --watch 'src/**/*.ts' --ignore 'src/**/__test__/*.ts' --exec 'ts-node' src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run test:unit",
    "test:unit": "dotenv -e .env.dev -- jest --runInBand --forceExit --detectOpenHandles",
    "lint": "eslint src/** --ext .{ts,js} --no-error-on-unmatched-pattern",
    "prisma:generate": "dotenv -e .env.dev -- npx prisma generate",
    "prisma:push": "dotenv -e .env.dev -- npx prisma db push",
    "prisma:migrate": "dotenv -e .env.dev -- npx prisma migrate dev",
    "docker:install": "docker-compose pull && docker-compose create",
    "docker:build": "docker-compose build",
    "docker:start": "npm run docker:start:dev",
    "docker:start:local": "dotenv -e .env.local -- docker-compose -f docker-compose.local.yaml up",
    "docker:start:dev": "dotenv -e .env.dev -- docker-compose up",
    "docker:start:prd": "dotenv -e .env.prd -- docker-compose up",
    "docker:clean": "docker-compose down",
    "playground": "dotenv -e .env.dev -- ts-node ./playground.ts"
  },
  "author": "Juro Oravec <juraj.oravec.josefson@gmail.com>",
  "license": "MIT",
  "_moduleAliases": {
    "@": "src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/connect-redis": "0.0.18",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/http-errors": "^1.8.2",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.127",
    "@types/node": "12.0.1",
    "@types/passport": "^1.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/redis-mock": "^0.17.1",
    "@types/stack-trace": "0.0.29",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prisma": "^3.8.1",
    "redis-mock": "^0.56.3",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.10.2",
    "@prisma/client": "^3.8.1",
    "apollo-server": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "connect-redis": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "graphql": "^16.2.0",
    "helmet": "^5.0.1",
    "http-errors": "^2.0.0",
    "joi": "^17.5.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "pino": "^7.6.4",
    "redis": "^4.0.2"
  }
}
